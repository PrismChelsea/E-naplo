        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_Naplo"
        mc:Ignorable="d"
        Title="NewMark" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="grades" HorizontalAlignment="Left" Height="348" Margin="0,76,0,0" VerticalAlignment="Top" Width="790" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="averagebutton" Content="Osztály kiválasztása" HorizontalAlignment="Left" Height="50" Margin="250,21,0,0" VerticalAlignment="Top" Width="150" Click="averagebutton_Click"/>
        <ComboBox x:Name="selectclass" HorizontalAlignment="Left" Height="50" Margin="444,21,0,0" VerticalAlignment="Top" Width="50"/>

    </Grid>
</Window>
